@model MiAppMvc.ViewModel.EditarEventoViewModel

<style>
    .form-label {
        color: white;
        font-weight: 600;
    }

    .form-control {
        border: 1px solid rgba(107, 121, 173, 0.5);
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

        .form-control:focus {
            border-color: #5a6894;
            box-shadow: 0 0 5px rgba(90, 104, 148, 0.5);
            background-color: white;
            color: #3a3f66;
        }

    .btn-primary {
        background-color: #6b79ad;
        border: none;
    }

        .btn-primary:hover {
            background-color: #5a6894;
        }

    .text-danger {
        font-weight: 600;
    }

    .container-edit {
        max-width: 600px;
        margin: 2rem auto;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 8px;
        border: 1px solid rgba(107, 121, 173, 0.3);
        color: #6b79ad;
        box-shadow: 0 2px 10px rgba(107, 121, 173, 0.2);
    }
</style>

<div class="container-edit">
    <h2 class="text-center mb-4">Editar Evento</h2>

    <form asp-action="EditarEvento" method="post" novalidate>
        <input type="hidden" asp-for="EventoId" />

        <div class="mb-3">
            <label asp-for="EventoName" class="form-label"></label>
            <input asp-for="EventoName" class="form-control" />
            <span asp-validation-for="EventoName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaInicio" class="form-label"></label>
            <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaFin" class="form-label"></label>
            <input asp-for="FechaFin" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
